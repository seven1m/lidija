#!/usr/bin/env ruby

unless ARGV.any?
  puts "usage: airball script.ball [args]"
  exit(1)
end

args = ARGV
script = args.shift

unless File.exist?(script)
  puts "Script '#{script}' cannot be found."
  exit(2)
end

require File.expand_path('../../airball', __FILE__)

program = Airball::Program.new(File.read(script), args)
program.run
